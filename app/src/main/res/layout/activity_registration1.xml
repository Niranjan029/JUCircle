<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackground"
    tools:context=".Registration.RegistrationActivity1">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:letterSpacing="0.033"
            android:paddingLeft="8dp"
            android:text="Add your first 2 photos"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:letterSpacing="0.04"
            android:paddingLeft="8dp"
            android:paddingBottom="1dp"
            android:text="2 photos are better than 1, it's JUCIRCLE science "
            android:textSize="18dp"

            />

    </LinearLayout>

        <LinearLayout
            android:id="@id/linear"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignBottom="@id/linear1"
            android:layout_marginBottom="-282dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1" />

        </LinearLayout>

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/linear"
        android:layout_alignBottom="@id/linear"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="-141dp"
        android:text=">"
        android:textSize="45dp"
        android:textStyle="bold" />

</RelativeLayout>